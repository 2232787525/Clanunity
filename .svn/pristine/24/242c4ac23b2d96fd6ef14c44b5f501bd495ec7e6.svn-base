- (instancetype)initWithFrame:(CGRect)frame
{
    if (self=[super initWithFrame:frame]) {
        self.backgroundColor = [UIColor whiteColor];
        [self setShadowImage:[UIImage imageWithColor:[UIColor clearColor]]];
        self.selectedImgView = [[UIImageView alloc] init];
        [self addSubview:self.selectedImgView];
    }
    return self;
}

- (void)layoutSubviews
{
    [super layoutSubviews];
    [self sendSubviewToBack:self.selectedImgView];
    self.selectedImgView.frame = CGRectMake(0, 0, KScreenWidth/3.0, 49);
    self.selectedImgView.image = [PLGlobalClass imageWithColor:[UIColor textColor1] size:self.selectedImgView.size_sd];

    //系统自带的按钮类型是UITabBarButton，找出这些类型的按钮，然后重新排布位置，空出中间的位置
    Class class = NSClassFromString(@"UITabBarButton");
    for (UIView *btn in self.subviews) {//遍历tabbar的子控件
        if ([btn isKindOfClass:class]) {//如果是系统的UITabBarButton，那么就调整子控件位置，空出中间位
//            NSLog(@"%@",btn);
//            btn.backgroundColor = [UIColor redColor];
        }
    }
    
}


@end
